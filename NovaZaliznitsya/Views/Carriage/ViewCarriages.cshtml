@model IEnumerable<NovaZaliznitsya.Models.CarriageViewModel>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Carriage_Desc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th></th>
        @if (ViewBag.IsAdmin)
        {
            <th></th>
            <th></th>
        }
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Carriage_Desc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.ActionLink("Забронировать", "Details", "Carriage", new { id = item.Id },null)
            </td>
            @if (ViewBag.IsAdmin)
            {
                <td>
                    @Html.ActionLink("Редактировать поезд", "Edit", "Carriage", new { id = item.Id }, null)
                </td>
                <td>
                    @Html.ActionLink("Удалить поезд", "Delete", "Carriage", new { id = item.Id }, null)
                </td>
            }
        </tr>
    }

</table>


@if (ViewBag.IsAdmin)
{

    @Html.ActionLink("Добавить вагон", "Insert", "Carriage", new { }, null)

}





